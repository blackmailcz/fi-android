<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color_1</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/primary_color_1</item>
        <item name="colorPrimaryDark">@color/primary_color_dark_1</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/primary_color_dark_1</item>
        <item name="colorAccent">@color/accent_color_1</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/accent_color_1</item>
    </style>

    <style name="AnotherAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary_color_2</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/primary_color_2</item>
        <item name="colorPrimaryDark">@color/primary_color_dark_2</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/primary_color_dark_2</item>
        <item name="colorAccent">@color/accent_color_2</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/accent_color_2</item>
    </style>

    <style name="MyGridLayout">
        <item name="android:background">?attr/colorAccent</item>
    </style>

</resources>